@using System.Linq

@{
    ViewBag.Title = "Error";
}
@section head {
    @Styles.Render("~/Styles/blog.css")
}

@{
    if ((ViewBag.ErrorMsg != null))
    {
        <h2 id="BlogTitle">
            Error: @ViewBag.ErrorMsg
        </h2>
    }
    else
    {
        <h2 id="BlogTitle">
            Error
        </h2>
    }
}

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "link" })
</p>


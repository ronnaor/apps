@model Blog.Models.Map

@{
    ViewBag.Title = "Details";
}
@section head {
    @Styles.Render("~/Styles/blog.css")
}
<h2 id="BlogTitle">Location Details</h2>

<div>
    <table class="table-horizontal">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <td>@Html.DisplayFor(model => model.Address)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Lat)</th>
            <td>@Html.DisplayFor(model => model.Lat)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Lng)</th>
            <td>@Html.DisplayFor(model => model.Lng)</td>
        </tr>
    </table>
</div>


<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "link" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "link" })
    @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { @class = "link" })
</p>

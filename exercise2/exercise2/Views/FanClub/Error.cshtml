@using System.Linq

@{
    ViewBag.Title = "Error";
}
@section head {
    <link href="~/Styles/FanClub.css" rel="stylesheet" type="text/css" />
}

@{
    if ((ViewBag.ErrorMsg != null))
    {
        <h2 id="FanClubTitle">
            Error: @ViewBag.ErrorMsg
        </h2>
    }
    else
    {
        <h2 id="FanClubTitle">
            Error
        </h2>
    }
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "link" })
</div>

